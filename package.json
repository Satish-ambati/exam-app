{
  "name": "secureexam",
  "version": "1.0.0",
  "description": "IconCoderz Secure Exam Browser",
  "main": "main.js",
  "author": "IconCoderz",
  "license": "MIT",
  "private": true,

  "scripts": {
    "start": "electron .",
    "win": "electron-builder --win nsis",
    "linux": "electron-builder --linux deb",
    "build": "electron-builder"
  },

  "build": {
    "appId": "com.iconcoderz.secureexam",
    "productName": "SecureExam",

    "directories": {
      "output": "dist"
    },

    "files": [
      "**/*",
      "!dist/*",
      "!node_modules/.cache/*",
      "!*.log"
    ],

    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },

    "linux": {
      "target": "deb",
      "icon": "assets/icon.png",
      "category": "Education"
    },

    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },

  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  }
}