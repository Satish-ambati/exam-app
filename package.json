{
  "name": "secureexam",
  "version": "1.0.0",
  "description": "IconCoderz Secure Exam Browser",
  "main": "main.js",
  "author": "IconCoderz",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "build-all": "electron-builder --win --linux"
  },
  "build": {
    "appId": "com.iconcoderz.secureexam",
    "productName": "SecureExam",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] }
      ],
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": [
        { "target": "AppImage", "arch": ["x64"] },
        { "target": "deb", "arch": ["x64"] }
      ],
      "icon": "assets/icon.png",
      "category": "Education"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  }
}